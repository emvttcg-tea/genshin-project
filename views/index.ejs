<!doctype html>

<html lang="en" data-theme="light">

 <%- include('includes/head'); %>

  <body>

    <%- include('includes/nav'); %>

    <div class="container">

      <div class="row">

        <div class="col-2"></div>

        <div class="col-8">

          <% if (!user) { %>
            <a class="btn btn-primary" href="/auth/register" role="button">Register</a>
            <a class="btn btn-primary" href="/auth/login" role="button">Login</a>
          <% } %>
      
          <% if (user) { %>
            <a class="btn btn-primary" href="/auth/logout" role="button">logout</a>
            <a class="btn btn-primary" href="/profile" role="button">profile</a>
            <a class="btn btn-primary" href="/admin/dashboard" role="button">admin</a>
          <% } %>

          <a class="btn btn-primary" href="/products" role="button">products</a>
          <a class="btn btn-primary" href="/cart" role="button">cart</a>
          <a class="btn btn-primary" href="/404" role="button">404</a>

          <!-- dark mode switch -->
          <div class="form-check form-switch toggle">
            <input class="form-check-input" type="checkbox" role="switch" id="toggleDark">
            <label class="form-check-label" for="toggleDark">Dark mode</label>
          </div>
      
          <!-- username -->
          <h1>
            <% if (user) { %>
              Hello, my name is <%= user.username %>
            <%} else { %>
              Hello, guest!
            <% } %>
          </h1>
      
          <!-- alerts -->
          <% if (message.type) { %>
            <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
              <%= message.body %>
            </div>
          <% } %>

        </div> <!-- col-8 -->

        <div class="col-2"></div>

      </div> <!-- row -->

    </div> <!-- container -->

 
    <%- include('includes/scripts'); %>
    
  </body>

</html>
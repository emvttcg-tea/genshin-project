<!doctype html>

<html lang="en">

 <%- include('../includes/head'); %>

  <body>

    <%- include('../includes/nav'); %>

    <div class="row">

      <% if (cartItems.length > 0) {%>

        <div class="">Products:</div>

        <% for(var item of cartItems) { %>
          <div class="card">
            <div class="card-body">
              <p><%= item.itemname %></p>
              <p>Price: <%= item.price %></p>
            </div>
          </div>
        <% } %>

    <% } else {%>

      <div class="">No Products available</div>

    <% }%>

    </div> <!-- row -->

 
    <%- include('../includes/scripts'); %>
    
  </body>

</html>
<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head'); %>
<body>
  
  <%- include('includes/nav'); %>

  <div class="container mt-5">

    <h1>Registration</h1>

    <% if (message.type) { %>
      <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
        <%= message.body %>
      </div>
    <% } %>

    <form method="POST" action="/register">

      <div class="mb-3">
        <label for="username" class="form-label">Username:<sup class="text-danger">*</sup></label>
        <input 
        type="text" 
        class="form-control <%= errors.username ? 'is-invalid' : '' %>" 
        id="username" 
        name="username"
        value="<%= formData.username %>"
        maxlength="64"
        minlehgth="2"
        >
        <% if (errors.username) { %>
          <div class="invalid-feedback">
            <%= errors.username[0] %>
          </div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email address<sup class="text-danger">*</sup></label>
        <input 
        type="email" 
        class="form-control <%= errors.email ? 'is-invalid' : '' %>" 
        id="email" 
        name="email" 
        aria-describedby="emailHelp"
        value="<%= formData.email %>"
        maxlength="128"
        minlehgth="2"
        >
        <% if (errors.email) { %>
          <div class="invalid-feedback">
            <%= errors.email[0] %>
          </div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password<sup class="text-danger">*</sup></label>
        <input type="password" name="password" class="form-control <%= errors.password ? 'is-invalid' : '' %>" id="password" required>
        <% if (errors.password) { %>
          <div class="invalid-feedback">
            <%= errors.password[0] %>
          </div>
        <% } %>
      </div>

      <div class="mb-3">
        <label for="repeat_password" class="form-label">Repeat password<sup class="text-danger">*</sup></label>
        <input type="password" name="repeat_password" class="form-control" id="repeat_password" required>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

  <%- include('includes/scripts'); %>

</body>
</html>